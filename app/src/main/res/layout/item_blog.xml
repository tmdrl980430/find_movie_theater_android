<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:padding="20dp"
    android:background="@drawable/blog_item_border_background">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_blog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/select_blog_title_text"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_blog_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:text="@string/select_blog_description_text"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/item_blog_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_blog_title_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_blog_postdate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:text="@string/select_blog_postdate_text"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/item_blog_description_tv"
        app:layout_constraintTop_toBottomOf="@id/item_blog_description_tv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_blog_bloggerlink_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:text="@string/select_blog_link_text"
        android:autoLink="web"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/item_blog_postdate_tv"
        app:layout_constraintTop_toBottomOf="@id/item_blog_postdate_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>